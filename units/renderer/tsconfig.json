{
    "extends": "./../../tsconfig.json",

    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ES2015.Promise",
        ],
        "module": "ESNext",

        "useDefineForClassFields": true,
        "isolatedModules": true,
        "jsx": "react-jsx",

        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"],
            "@shared/*": ["../../../shared/*"]
        }
    },
    "include": [
        "src",
        "*.ts",
        "../../shared/**/*"
    ]
}
